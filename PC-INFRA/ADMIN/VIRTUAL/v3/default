###  Default

server {
    server_name    index.pocketcluster.io news.pocketcluster.io;
    listen         *:80 default_server;
    #listen        [::]:80 default_server;

    # plain http port should not handle ssl
    ssl            off;

    if ($host = 'index.pocketcluster.io') {
        return     301 https://index.pocketcluster.io$request_uri;
    }
    if ($host = 'news.pocketcluster.io') {
        return     301 https://news.pocketcluster.io$request_uri;
    }

    # we don't respond other than the predefined hosts
    return 	       444;
}